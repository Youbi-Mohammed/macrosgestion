{% extends 'base.html.twig' %}

{% block title %}Ingredient Index{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 flex items-center justify-center py-6 px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-lg w-full max-w-4xl p-6">
            <h1 class="text-2xl font-semibold text-black mb-6">Ingredient Index</h1>

            <div class="overflow-x-auto">
                <table class="min-w-full table-auto border-collapse">
                    <thead>
                        <tr class="bg-gray-100 text-left text-sm font-medium text-black"> <!-- Changed to text-black -->
                            <th class="px-4 py-2 border-b text-black">Id</th> <!-- Changed to text-black -->
                            <th class="px-4 py-2 border-b text-black">Aliment</th> <!-- Changed to text-black -->
                            <th class="px-4 py-2 border-b text-black">Calories</th> <!-- Changed to text-black -->
                            <th class="px-4 py-2 border-b text-black">Proteins</th> <!-- Changed to text-black -->
                            <th class="px-4 py-2 border-b text-black">Carbs</th> <!-- Changed to text-black -->
                            <th class="px-4 py-2 border-b text-black">Actions</th> <!-- Changed to text-black -->
                        </tr>
                    </thead>
                    <tbody>
                        {% for ingredient in ingredients %}
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-4 py-2 text-sm text-black">{{ ingredient.id }}</td> <!-- Changed to text-black -->
                                <td class="px-4 py-2 text-sm text-black">{{ ingredient.aliment }}</td> <!-- Changed to text-black -->
                                <td class="px-4 py-2 text-sm text-black">{{ ingredient.calories }}</td> <!-- Changed to text-black -->
                                <td class="px-4 py-2 text-sm text-black">{{ ingredient.proteins }}</td> <!-- Changed to text-black -->
                                <td class="px-4 py-2 text-sm text-black">{{ ingredient.carbs }}</td> <!-- Changed to text-black -->
                                <td class="px-4 py-2 text-sm text-black">
                                    <a href="{{ path('app_ingredient_show', {'id': ingredient.id}) }}" class="text-blue-600 hover:text-blue-800">show</a>
                                    <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}" class="ml-4 text-blue-600 hover:text-blue-800">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="px-4 py-2 text-center text-sm text-black">No records found</td> <!-- Changed to text-black -->
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="mt-4 text-right">
                <a href="{{ path('app_ingredient_new') }}" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Create New Ingredient
                </a>
            </div>
        </div>
    </div>
{% endblock %}
