{% extends 'base.html.twig' %}

{% block title %}Welcome Home!{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        color: #333;
        margin: 0;
        padding: 0;
    }
    .example-wrapper {
        margin: 2em auto;
        max-width: 800px;
        width: 90%;
