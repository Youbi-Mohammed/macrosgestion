{% extends 'base.html.twig' %}

{% block title %}Plats index{% endblock %}

{% block body %}
    <h1>Plats index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_du_plat</th>
                <th>Date_repas</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plat in plats %}
            <tr>
                <td>{{ plat.id }}</td>
                <td>{{ plat.nomDuPlat }}</td>
                <td>{{ plat.dateRepas ? plat.dateRepas|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_plats_show', {'id': plat.id}) }}">show</a>
                    <a href="{{ path('app_plats_edit', {'id': plat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_plats_new') }}">Create new</a>
{% endblock %}
