{% extends 'base.html.twig' %}

{% block title %}Plats{% endblock %}

{% block body %}
<div class="container mx-auto my-12 p-6 max-w-3xl bg-white shadow-xl rounded-lg">
    <h1 class="text-3xl font-extrabold text-black mb-6">Plats</h1>

    <div class="overflow-x-auto mb-6">
        <table class="min-w-full table-auto border-collapse text-sm">
            <tbody>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left font-medium text-gray-700">Id</th>
                    <td class="px-4 py-2 text-gray-900">{{ plat.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left font-medium text-gray-700">Nom du plat</th>
                    <td class="px-4 py-2 text-gray-900">{{ plat.nomDuPlat }}</td>
                </tr>
                <tr class="border-b">
                    <th class="px-4 py-2 text-left font-medium text-gray-700">Date repas</th>
                    <td class="px-4 py-2 text-gray-900">{{ plat.dateRepas ? plat.dateRepas|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex justify-between">
        <a href="{{ path('app_plats_index') }}" 
           class="inline-block bg-gray-500 text-white font-medium text-lg py-2 px-4 rounded-lg shadow hover:bg-gray-600 transition duration-300">
            Back to List
        </a>

        <a href="{{ path('app_plats_edit', {'id': plat.id}) }}" 
           class="inline-block bg-blue-600 text-white font-medium text-lg py-2 px-4 rounded-lg shadow hover:bg-blue-700 transition duration-300">
            Edit
        </a>
    </div>
</div>
{% endblock %}
