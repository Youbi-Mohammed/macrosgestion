{% extends 'base.html.twig' %}
{% block title %}Nouvelle Recette{% endblock %}
{% block stylesheets %}
   {{ parent() }}
   <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
   <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}
{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-12">
   <div class="container mx-auto px-4 max-w-3xl">
       <!-- Header Section -->
       <div class="mb-8">
           <div class="flex items-center gap-4 mb-2">
               <a href="{{ path('app_recette_index') }}" 
                  class="text-gray-600 hover:text-blue-600 transition-all duration-300 group">
                   <i class="fas fa-arrow-left mr-2 transform group-hover:-translate-x-1 transition-transform"></i>
                   Back to Recipes
               </a>
           </div>
           <h1 class="text-4xl font-bold text-gray-800 relative inline-block">
               New Recipe
               <span class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-purple-500"></span>
           </h1>
       </div>

       <!-- Form Card -->
       <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
           {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
               <!-- Title Field -->
               <div class="form-group">
                   {{ form_label(form.titre, 'Recipe Title', {'label_attr': {
                       'class': 'block text-lg font-semibold text-gray-700 mb-2'
                   }}) }}
                   {{ form_widget(form.titre, {'attr': {
                        'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition-all duration-200 text-gray-900',
                        'placeholder': 'Enter your recipe title'
                    }}) }}
                   {{ form_errors(form.titre, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
               </div>

               <!-- Instructions Field -->
               <div class="form-group">
                   {{ form_label(form.instructions, 'Cooking Instructions', {'label_attr': {
                       'class': 'block text-lg font-semibold text-gray-700 mb-2'
                   }}) }}
                   {{ form_widget(form.instructions, {'attr': {
                        'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition-all duration-200 text-gray-900',
                        'rows': '6',
                        'placeholder': 'Describe the cooking steps...'
                    }}) }}
                   {{ form_errors(form.instructions, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
               </div>

               <!-- Ingredients Section -->
               <div class="form-group">
                   <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
                       <i class="fas fa-list-ul text-blue-500"></i>
                       Ingredients
                   </h3>
                   {{ form_widget(form.ingredient, {'attr': {
                        'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition-all duration-200 text-gray-900',
                        'rows': '4',
                        'placeholder': 'List your ingredients...'
                    }}) }}
                   {{ form_errors(form.ingredient, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
               </div>

               <!-- Submit Button -->
               <div class="flex justify-end gap-4">
                   <button type="submit" 
                           class="bg-gradient-to-r from-blue-500 to-purple-500 text-white px-8 py-3 rounded-lg 
                                  hover:from-blue-600 hover:to-purple-600 transform hover:-translate-y-0.5 
                                  transition-all duration-300 shadow-md hover:shadow-lg flex items-center gap-2">
                       <i class="fas fa-save"></i>
                       Save Recipe
                   </button>
               </div>
           {{ form_end(form) }}
       </div>

       <!-- Tips Section -->
       <div class="mt-8 bg-blue-50 rounded-xl p-6 border border-blue-100">
           <h4 class="text-lg font-semibold text-blue-800 mb-3 flex items-center gap-2">
               <i class="fas fa-lightbulb text-blue-500"></i>
               Recipe Writing Tips
           </h4>
           <ul class="text-blue-700 space-y-2">
               <li class="flex items-center gap-2">
                   <i class="fas fa-check-circle text-blue-500"></i>
                   Be specific with quantities and measurements
               </li>
               <li class="flex items-center gap-2">
                   <i class="fas fa-check-circle text-blue-500"></i>
                   List ingredients in order of use
               </li>
               <li class="flex items-center gap-2">
                   <i class="fas fa-check-circle text-blue-500"></i>
                   Include cooking times and temperatures
               </li>
           </ul>
       </div>
   </div>
</div>
{% endblock %}